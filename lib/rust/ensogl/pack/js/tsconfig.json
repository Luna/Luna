{
  "compilerOptions": {
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "target": "ES2019",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
  },
  "ts-node": {
    "esm": true
  }
}
