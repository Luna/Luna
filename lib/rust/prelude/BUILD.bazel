    name = "enso-prelude",
    srcs = glob(["src/**/*.rs"]),
    aliases = aliases(),
    edition = "2021",
    proc_macro_deps = all_crate_deps(proc_macro = True) + [
        "//lib/rust/prelude/macros:enso-macros"
