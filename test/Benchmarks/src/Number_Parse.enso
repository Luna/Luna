from Standard.Base import all

from Standard.Test import Bench, Faker, Phase_Conf


options = Bench.options . set_warmup (Phase_Conf.Seconds 5) . set_measure (Phase_Conf.Seconds 3)


collect_benches = Bench.build builder->
    vector_size = 1000000
    ## No specific significance to this constant, just fixed to make generated set deterministic
    fixed_random_seed = 1644575867
    faker = Faker.new fixed_random_seed

    decimal_strings = Vector.new vector_size _->(faker.decimal -1000000000 1000000000).to_text
    int_strings = Vector.new vector_size _->(faker.integer -1000000000 1000000000).to_text

    builder.group "Number_Parse" options group_builder->
        group_builder.specify "decimal_parse" <|
            decimal_strings.map Decimal.parse

        group_builder.specify "integer_parse" <|
            int_strings.map Integer.parse


main = collect_benches . run_main
