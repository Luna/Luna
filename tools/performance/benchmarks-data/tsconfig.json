{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "Node16",
    "target": "es2017",
    "outDir": "target",
    "sourceMap": true,
    "strict": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "types": [
      "node",
      "jest"
    ]
  }
}
