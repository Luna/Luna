<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%level] [%d{yyyy-MM-ddTHH:mm:ssXXX}] [%logger] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="forward-via-socket" class="ch.qos.logback.classic.net.SocketAppender">
        <remoteHost>${logging-server.host}</remoteHost>
        <port>${logging-server.port}</port>
        <reconnectionDelay>10000</reconnectionDelay>
        <includeCallerData>true</includeCallerData>
    </appender>

    <root level="#{runner.logLevel:-info}">
        <appender-ref ref="${runner.appender:-file-fallback}"/>
    </root>
</configuration>
