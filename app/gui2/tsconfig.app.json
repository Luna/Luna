  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "shared/**/*.vue", "visualizations/**/*", "visualizations/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
