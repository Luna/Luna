{
  "extends": "../tsconfig.json",
  "include": [
    "src",
    "e2e",
    "./src/**/*.json",
    "./e2e/**/*.json",
    "*.ts"
  ],
  "exclude": ["./dist", "vitest.config.ts"],
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "../../node_modules/.cache/tsc",
    "paths": { "#/*": ["./src/*"] },
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ES2023"]
  }
}
