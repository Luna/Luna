import Std.System

class Time:
    Time

    def now: primGetCurrentTime

    def minus other: primDiffTime self other

    def toText: primShowTime self

    def shortRep: self.toText

    def equals other: primTimesEq self other


class TimeInterval:
    TimeInterval

    def toText: primShowTimeInterval self

    def shortRep: self.toText

    def ago: primSubTimeInterval self Time.now

    def fromNow: primAddTimeInterval self Time.now

    def equals other: primTIEq self other

